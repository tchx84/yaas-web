<div class="info">
  <h2>New Session</h2>
  <div>Please enter your logging information</div>
</div>

<% form_tag({:controller => :sessions, :action => :create}, {:class => "wufoo"}) do %>

  <p>
    <%= label_tag(:name, "Username:", :class => "desc") %><br />
    <%= text_field_tag(:name, "", :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:password, "Password:", :class => "desc") %><br />
    <%= password_field_tag(:password, "", :class => "field text small") %> 
  </p>

  <p>
    <%= submit_tag("Login", :class => "buttons") %>
  </p>
<% end %>
