<h1>New Session</h1>

<% form_tag({:controller => :sessions, :action => :create}) do %>

  <p>
    <%= label_tag(:name, "Username:") %><br />
    <%= text_field_tag(:name, "hola") %>
  </p>

  <p>
    <%= label_tag(:password, "Password:") %><br />
    <%= text_field_tag(:password) %>
  </p>

  <p>
    <%= submit_tag("Login") %>
  </p>
<% end %>

<%= link_to 'Back', :controller => 'options' %>
