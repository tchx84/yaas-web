<div class="info">
  <h2> <%= @user.name.upcase %>'s Options </h2>
  <% if !@user.admin %>
    <div>You currently have <%= @user.bucket %> activations available in your bucket </div>
  <% else%>
    <div> System administration options </div>     
  <% end %>
</div>


<ul>
  <% if @user.admin %>
    <li> <%= link_to 'List users', :controller => 'users', :action => 'index' %> </li>
    <li> <%= link_to 'Create user', :controller => 'users', :action => 'new' %> </li>
  <% end %>

  <li> <%= link_to 'List activations', :controller => 'activations', :action => 'index' %> </li>
  <li> <%= link_to 'Create activation', :controller => 'activations', :action => 'new' %> </li>

  <li> <%= link_to 'Change password', :controller => 'users', :action => 'change_password', :id => @user.id %> </li>
  <li> <%= link_to 'Logout', :controller => 'sessions', :action => 'destroy' %> </li>
</ul>
