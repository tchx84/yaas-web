<div class="info">
  <h2><%= _("Edit User") %></h2>
  <div><%= _("Modify user's information") %></div>
</div>

<%= error_messages_for 'user' %>

<% form_tag({:action => :update, :id => @user.id}, :class => "wufoo", :autocomplete => :off) do %>

  <p>
    <%= label_tag(:name, _("Username:"), :class => "desc") %><br />
    <%= text_field_tag(:name, @user.name, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:password, _("Password:"), :class => "desc") %><br />
    <%= password_field_tag(:password, @user.password, :class => "field text small") %> 
  </p>

  <p>
    <%= label_tag(:email, _("Email:"), :class => "desc") %><br />
    <%= text_field_tag(:email, @user.email, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:bucket, _("Bucket:"), :class => "desc") %><br />
    <%= text_field_tag(:bucket, @user.bucket, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:activation_limit, _("Activation Limit (days):"), :class => "desc") %><br />
    <%= text_field_tag(:activation_limit, @user.activation_limit, :class => "field text small") %>
  </p>

  <p>
    <%= submit_tag(_("Save"), :class => "buttons") %>
  </p>
<% end %>

<div class="info">
<%= link_to _('Back'), :action => 'options' %>
</div>
