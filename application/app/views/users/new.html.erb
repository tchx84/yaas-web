<div class="info">
  <h2>Create User</h2>
  <div>Please complete all user's information</div>
</div>

<% form_tag({:action => :create}, :class => "wufoo") do %>

  <p>
    <%= label_tag(:name, "Username:", :class => "desc") %><br />
    <%= text_field_tag(:name, "", :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:password, "Password:", :class => "desc") %><br />
    <%= password_field_tag(:password, "", :class => "field text small") %> 
  </p>

  <p>
    <%= label_tag(:email, "Email:", :class => "desc") %><br />
    <%= text_field_tag(:email, "", :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:bucket, "Bucket:", :class => "desc") %><br />
    <%= text_field_tag(:bucket, "", :class => "field text small") %>
  </p>

  <p>
    <%= submit_tag("Create", :class => "buttons") %>
  </p>
<% end %>

<div class="info">
<%= link_to 'Back', :action => 'index' %>
</div>
