<h1>New User</h1>

<% form_tag({:action => :create}) do %>

  <p>
    <%= label_tag(:name, "Username") %><br />
    <%= text_field_tag(:name) %>
  </p>

  <p>
    <%= label_tag(:password, "Password") %><br />
    <%= password_field_tag(:password) %> 
  </p>

  <p>
    <%= submit_tag("Create") %>
  </p>
<% end %>

<%= link_to 'Back', :action => 'options' %>
