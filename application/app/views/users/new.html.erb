<div class="info">
  <h2>Create User</h2>
  <div>Please complete all user's information</div>
</div>

<%= error_messages_for 'user' %>

<% form_tag({:action => :create}, :class => "wufoo") do %>

  <p>
    <%= label_tag(:name, "Username:", :class => "desc") %><br />
    <%= text_field_tag(:name, @user.name, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:password, "Password:", :class => "desc") %><br />
    <%= password_field_tag(:password, @user.password, :class => "field text small") %> 
  </p>

  <p>
    <%= label_tag(:email, "Email:", :class => "desc") %><br />
    <%= text_field_tag(:email, @user.email, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:bucket, "Bucket:", :class => "desc") %><br />
    <%= text_field_tag(:bucket, @user.bucket, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:activation_limit, "Activation Limit (days):", :class => "desc") %><br />
    <%= text_field_tag(:activation_limit, @user.activation_limit, :class => "field text small") %>
  </p>

  <p>
    <%= submit_tag("Create", :class => "buttons") %>
  </p>
<% end %>

<div class="info">
<%= link_to 'Back', :action => 'index' %>
</div>
