<div class="info">
  <h2>Password</h2>
  <div>Change you current password</div>
</div>

<%= error_messages_for 'user' %>

<% form_tag({:action => 'save_changed_password'}, :class => "wufoo") do %>

  <p>
    <%= label_tag(:old_password, "Old password:", :class => "desc") %><br />
    <%= password_field_tag(:old_password, "", :class => "field text small") %> 
  </p>

  <p>
    <%= label_tag(:new_password, "New password:", :class => "desc") %><br />
    <%= password_field_tag(:new_password, "", :class => "field text small") %> 
  </p>

  <p>
    <%= label_tag(:new_password_validation, "New password validation:", :class => "desc") %><br />
    <%= password_field_tag(:new_password_validation, "", :class => "field text small") %> 
  </p>

  <p>
    <%= submit_tag("Save", :class => "buttons") %>
  </p>
<% end %>

<dev class="info">
<%= link_to 'Back', :action => 'options' %>
</div>
