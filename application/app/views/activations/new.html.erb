<div class="info">
  <h2>Activation</h2>
  <div>Use your data files to create activations</div>
</div>

<%= error_messages_for 'activation' %>

<% form_tag({:action => :create}, {:class => "wufoo", :multipart => true}) do %>

  <p>
    <%= label_tag(:comments, "Comments:", :class => "desc") %>
    <%= text_area_tag(:comments, @activation.comments, :class => "field textarea small") %>
  </p>

  <p>
    <%= label_tag(:duration, "Lease duration (days):", :class => "desc") %>
    <%= text_field_tag(:duration, @activation.duration, :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:file, "Laptops data:", :class => "desc") %>
    <%= file_field_tag(:file, :class => "field file") %>
  </p>

  <p>
    <%= label_tag(:method, "Activation Method:", :class => "desc") %>
    <%=select_tag :method, options_for_select((@activation.method == "Keys" ? (%w{Keys Leases}) : (%w{Leases Keys})), :class => "field select")%>
  </p>

  <p>
    <%= submit_tag("Create", :class => "buttons") %>
  </p>
<% end %>

<div class="info">
  <%= link_to 'Back', {:controller => 'users', :action => 'options'} %>
</div>
