<div class="info">
  <h2>Activations</h2>
  <div>Download the activations you have created</div>
</div>

<table>
  <tr>
    <% if @admin %>
      <th><%= label_tag(:name, "Name", :class => "desc") %></th>
    <% end %>

    <th><%= label_tag(:created_at, "Created", :class => "desc") %></th>
    <th><%= label_tag(:method, "Method", :class => "desc") %></th>
    <th><%= label_tag(:bucket, "Bucket", :class => "desc") %></th>
    <th><%= label_tag(:comments, "Comments", :class => "desc") %></th>
  </tr>

<% @activations.each do |activation| %>
  <tr>
    <% if @admin %>
      <td><%= label_tag(:name, activation.user.name, :class => "field text addr") %></td>
    <% end %>

    <td><%= label_tag(:created_at, activation.created_at, :class => "field text addr") %></td>
    <td><%= label_tag(:method, activation.method, :class => "field text addr") %></td>
    <td><%= label_tag(:bucket, activation.bucket, :class => "field text addr") %></td>
    <td><%= label_tag(:comments, activation.comments, :class => "field text addr") %></td>
    <td><%= link_to 'Download', :action => 'download', :id => activation.id %></td>

    <% if @admin %>
      <td><%= link_to 'Delete',   :action => 'destroy',  :id => activation.id %></td>
    <% end %>

  </tr>
<% end %>
</table>

<br>

<div class="info">
  <%= link_to 'Create Activation', :action => 'new' %> 
  <%= link_to 'Back', :controller => 'users', :action => 'options' %>
</div>
