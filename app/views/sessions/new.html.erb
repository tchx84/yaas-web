<div class="info">
  <h2><%= _("New Session") %></h2>
  <div><%= _("Please enter your login information") %></div>
</div>

<% form_tag({:controller => :sessions, :action => :create}, {:class => "wufoo"}) do %>

  <p>
    <%= label_tag(:name, _("Username:"), :class => "desc") %><br />
    <%= text_field_tag(:name, "", :class => "field text small") %>
  </p>

  <p>
    <%= label_tag(:password, _("Password:"), :class => "desc") %><br />
    <%= password_field_tag(:password, "", :class => "field text small") %> 
  </p>

  <p>
    <%= label_tag(:language, _("Language"), :class => "desc") %><br />
    <select name="language">
    <% { "es" => _("Spanish"), "en" => _("English") }.each_pair do |k,v| %>
      <option value="<%= k %>"><%= v %></option>
    <% end %>
    </select>
  </p>

  <p>
    <%= submit_tag(_("Login"), :class => "buttons") %>
  </p>
<% end %>
